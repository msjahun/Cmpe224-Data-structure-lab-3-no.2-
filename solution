#include<stdlib.h>
#include<stdio.h>


int main(){

	double arrayX[3][4]={13.5, 24.88, 66.28, 30.0, 2.84, 412.15,13.2, 9.9, 15.5,34.5, 23.5};
double arrayY[12]; int k=0;


	for(int i=0; i<3; i++){
		for(int j=0; j<4; j++){ 
	
		printf("%.2lf\t", arrayX[i][j]);
		arrayY[k++]=arrayX[i][j];
		
	}
	printf("\n");
}
printf("\n");
printf("\n");

for(int g=0; g<12; g++)
printf("%.2lf ", arrayY[g]);

//row wise
